{
  // Workspace
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent_workspaces": {
      "*": 5
    }
  },

  // Disk
  "disk": {
    "interval": 30,
    "format": " {percentage_used}% ",
    "path": "/home"
  },

  // CPU
  "cpu": {
    "format": "   {usage}% "
  },

  // Memory
  "memory": {
    "format": "  {}% "
  },

  // Boot Menu
  "custom/exit": {
    "format": "",
    "on-click": "wlogout",
    "tooltip": false
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "{}",
  },

  // Clock
  "clock": {
    "timezone": "America/Sao_Paulo",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
}
